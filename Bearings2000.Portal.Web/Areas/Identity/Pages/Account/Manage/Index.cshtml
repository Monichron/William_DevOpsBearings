@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <hr/>
            <p><bold>Basic Details</bold></p>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" />
                <label asp-for="Input.FirstName" class="form-label"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Surname" class="form-control" />
                <label asp-for="Input.Surname" class="form-label"></label>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.IDNumber" class="form-control" />
                <label asp-for="Input.IDNumber" class="form-label"></label>
                <span asp-validation-for="Input.IDNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <hr />
            <p><bold>Permissions</bold></p>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Input.CanCreateEnquiry" class="form-check-input" />
                <label asp-for="Input.CanCreateEnquiry" class="form-check-label"></label>
                <span asp-validation-for="Input.CanCreateEnquiry" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Input.CanViewDocuments" class="form-check-input" />
                <label asp-for="Input.CanViewDocuments" class="form-check-label"></label>
                <span asp-validation-for="Input.CanViewDocuments" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Input.CanViewTracking" class="form-check-input" />
                <label asp-for="Input.CanViewTracking" class="form-check-label"></label>
                <span asp-validation-for="Input.CanViewTracking" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Input.IndividualPricing" class="form-check-input" />
                <label asp-for="Input.IndividualPricing" class="form-check-label"></label>
                <span asp-validation-for="Input.IndividualPricing" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Input.CustomerPricing" class="form-check-input" />
                <label asp-for="Input.CustomerPricing" class="form-check-label"></label>
                <span asp-validation-for="Input.CustomerPricing" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Input.ShowPrice" class="form-check-input" />
                <label asp-for="Input.ShowPrice" class="form-check-label"></label>
                <span asp-validation-for="Input.ShowPrice" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Input.ShowActualQuantity" class="form-check-input" />
                <label asp-for="Input.ShowActualQuantity" class="form-check-label"></label>
                <span asp-validation-for="Input.ShowActualQuantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Input.ShowNoQuantity" class="form-check-input" />
                <label asp-for="Input.ShowNoQuantity" class="form-check-label"></label>
                <span asp-validation-for="Input.ShowNoQuantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Input.ShowHighlevelQuantity" class="form-check-input" />
                <label asp-for="Input.ShowHighlevelQuantity" class="form-check-label"></label>
                <span asp-validation-for="Input.ShowHighlevelQuantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Input.ShowMaxAllowedToViewQuantity" class="form-check-input" />
                <label asp-for="Input.ShowMaxAllowedToViewQuantity" class="form-check-label"></label>
                <span asp-validation-for="Input.ShowMaxAllowedToViewQuantity" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
